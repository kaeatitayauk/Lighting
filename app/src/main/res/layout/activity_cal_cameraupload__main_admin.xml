<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.samlee.lighting.cal_cameraupload_MainAdmin"
    android:orientation="vertical"
    android:background="#ccaff5"
    android:padding="10dp">

    <Button
        android:id="@+id/btn_upload"
        android:layout_above="@+id/btn_camera"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="122dp"
        android:drawableTop="@android:drawable/ic_menu_gallery"
        android:text="อัปโหลด"
        android:fontFamily="@font/mitr_extralight"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_width="185dp"
        android:layout_height="100dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:paddingTop="10dp"
        />

    <Button
        android:id="@+id/btn_camera"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="117dp"
        android:paddingTop="10dp"
        android:drawableTop="@android:drawable/ic_menu_camera"
        android:text="ถ่ายภาพ"
        android:fontFamily="@font/mitr_extralight"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_width="185dp"
        android:layout_height="100dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0" />

    <TextView
        android:id="@+id/textView_maincal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btn_upload"
        android:layout_marginTop="43dp"
        android:text="TextView"
        android:visibility="invisible" />


</RelativeLayout>
