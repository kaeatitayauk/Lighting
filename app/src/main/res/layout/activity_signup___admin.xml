<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#9a027bd3"
    tools:context="com.example.samlee.lighting.Signup_Activity_Admin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/light" />


        <EditText
            android:id="@+id/Username"
            style="@style/editText_style"
            android:hint="Username"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/pass1"
            style="@style/editText_style"
            android:hint="Password"
            android:inputType="textPassword" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*ใส่ตัวเลขหรือตัวอักษรอย่างน้อย 4 ตัว"
            android:fontFamily="@font/mitr_extralight"
            android:layout_marginLeft="18dp"
            android:textColor="#fb0000"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/pass2"
            style="@style/editText_style"
            android:hint="Confirm Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/register"
            style="@style/button_style"
            android:text="สมัครสมาชิก" />


    </LinearLayout>

</RelativeLayout>
