<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9999CC"
    tools:context="com.example.samlee.lighting.Setting_ad">


    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/input_unit"
        android:text="TextView"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textDes_set"
        style="@style/textView_style"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/mitr_extralight"
        android:text="ตั้งค่า"
        android:textAlignment="center"
        android:textSize="36dp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btn_backtocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_unit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:text="บันทึก" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textDes_set"
        android:layout_marginStart="33dp"
        android:layout_marginTop="51dp"
        android:fontFamily="@font/mitr_extralight"
        android:text="เลขอ่านครั้งก่อน"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/input_lastmeter"
        style="@style/editText_style_calmain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView6"
        android:layout_marginStart="21dp"
        android:layout_toEndOf="@+id/textView6"
        android:ems="7"
        android:inputType="number"
        android:textAlignment="center" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/input_lastmeter"
        android:layout_marginTop="39dp"
        android:fontFamily="@font/mitr_extralight"
        android:text="บาท/หน่วย"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/input_unit"
        style="@style/editText_style_calmain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/input_lastmeter"
        android:layout_alignTop="@+id/textView7"
        android:ems="7"
        android:inputType="number"
        android:textAlignment="center"/>

</RelativeLayout>
