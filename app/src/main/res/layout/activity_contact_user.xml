<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#98e6e6"
    tools:context="com.example.samlee.lighting.Contact_user">


    <Button
        android:id="@+id/button_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="#e8dade"
        android:drawableTop="@drawable/home_u"
        android:fontFamily="@font/mitr_extralight"
        android:paddingTop="10dp"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="311dp"
        tools:layout_editor_absoluteY="0dp" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="480dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/light"
        />
    <TextView
        android:id="@+id/textView2"
        style="@style/textView_style"
        android:layout_marginTop="140dp"
        android:textColor="#000000"
        android:text="Lighting"
        android:textSize="18dp"
        android:fontFamily="@font/mitr_extralight"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="150dp"
        android:id="@+id/scrollView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/text_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/scrollView2"
                android:padding="30dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/mitr_extralight"
                android:textSize="18dp"
                android:textColor="#000000"
                />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>
