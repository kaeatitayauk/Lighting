<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9999CC"
    tools:context="com.example.samlee.lighting.calendarAdmin">

    <TextView
        android:id="@+id/textDes_set"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/mitr_extralight"
        android:text="รายงาน"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="36dp"
        android:textStyle="bold"
        android:paddingTop="9dp"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:background="@drawable/button_shape_report"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

    <Spinner
        android:id="@+id/spinner_select_room"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/button"
        android:layout_below="@+id/button"
        android:layout_marginTop="39dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView"
        android:layout_marginEnd="43dp"
        android:layout_marginTop="20dp"
        android:background="#d03060"
        android:fontFamily="@font/mitr_extralight"
        android:text="ค้นหา"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button"
        android:layout_marginEnd="48dp"
        android:layout_toStartOf="@+id/button"
        android:fontFamily="@font/mitr_extralight"
        android:text="กรุณาเลือกวันที่"
        android:textColor="#000000"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView16"
        android:layout_alignTop="@+id/spinner_select_room"
        android:fontFamily="@font/mitr_extralight"
        android:text="กรุณาเลือกห้อง"
        android:textColor="#000000"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="150dp"
        android:layout_height="54dp"
        android:layout_below="@+id/textDes_set"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/mitr_extralight"
        android:gravity="center"
        android:text="dd/MM/yyyy"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button1"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/textView"
        android:layout_below="@+id/textView30"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="31dp"
        android:background="#d03060"
        android:fontFamily="@font/mitr_extralight"
        android:text="ดูรายงาน"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="#e8dade"
        android:drawableTop="@drawable/home_u"
        android:fontFamily="@font/mitr_extralight"
        android:paddingTop="10dp"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="420dp"
        android:id="@+id/scrollView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/scrollView2"
                android:paddingLeft="30dp" />

        </LinearLayout>
    </ScrollView>



</RelativeLayout>
