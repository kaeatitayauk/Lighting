<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b6cdf1"
    tools:context="com.example.samlee.lighting.calmainxuser">

    <TextView
        android:id="@+id/textDes"
        style="@style/textView_style1"
        android:layout_above="@+id/lastmeter"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp"
        android:fontFamily="mitr_extralight"
        android:text="calculate"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtdate"
        style="@style/button_styleMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_set"
        android:layout_alignBottom="@+id/btn_set"
        android:layout_alignEnd="@+id/btn_upload"
        android:layout_marginEnd="18dp"
        android:ems="5"
        android:fontFamily="@font/mitr_extralight"
        android:inputType="textPersonName"
        android:text="dd/MM/yyyy"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/unit"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginBottom="37dp"
        android:fontFamily="@font/mitr_extralight"
        android:text="เลขอ่านล่าสุด"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_centerVertical="true"
        android:fontFamily="@font/mitr_extralight"
        android:text="หน่วยที่ใช้ไป"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtdate"
        android:layout_below="@+id/unit"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/mitr_extralight"
        android:text="จำนวนเงิน"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/lastmeter"
        style="@style/editText_style_calmain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignEnd="@+id/btn_set"
        android:layout_marginEnd="12dp"
        android:ems="8"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/unit"
        style="@style/editText_style_calmain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignStart="@+id/lastmeter"
        android:ems="8"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/total_pay"
        style="@style/editText_style_calmain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/unit"
        android:ems="8"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_home"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="#d03060"
        android:fontFamily="@font/mitr_extralight"
        android:padding="8dp"
        android:text="อัปโหลด/ถ่ายภาพ"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="27dp"
        android:background="#d03060"
        android:fontFamily="@font/mitr_extralight"
        android:padding="8dp"
        android:text="กลับสู่หน้าหลัก"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btn_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="27dp"
        android:background="#d4ea7013"
        android:drawableTop="@drawable/settingsim"
        android:padding="5dp"
        android:text="ตั้งค่า"
        android:fontFamily="@font/mitr_extralight"
        android:textColor="#ffffff"

        />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_home"
        android:layout_alignBottom="@+id/btn_home"
        android:layout_alignEnd="@+id/total_pay"
        android:layout_marginEnd="26dp"
        android:background="#d03060"
        android:fontFamily="@font/mitr_extralight"
        android:padding="8dp"
        android:text="บันทึกข้อมูล"
        android:textColor="#ffffff" />

</RelativeLayout>
